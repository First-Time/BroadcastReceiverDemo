<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_go_dynamic_broadcast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="go dynamic broadcast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_go_static_broadcast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="go static broadcast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_go_dynamic_broadcast" />

    <Button
        android:id="@+id/btn_send_dynamic_broadcast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="send dynamic broadcast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_go_static_broadcast" />

    <Button
        android:id="@+id/btn_send_static_broadcast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="send static broadcast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_send_dynamic_broadcast" />

    <Button
        android:id="@+id/btn_go_order_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="go ordered activity 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_send_static_broadcast" />

    <Button
        android:id="@+id/btn_go_network"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="go network activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_go_order_1" />
</androidx.constraintlayout.widget.ConstraintLayout>